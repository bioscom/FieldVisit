                </asp:DropDownList>
            </HeaderTemplate>

            <ItemTemplate>
                <asp:Label ID="lblCheckedBy" runat="server" Text='<%# DataBinder.Eval(Container.DataItem, "CHECKEDBYFULLNAME") %>'></asp:Label>
